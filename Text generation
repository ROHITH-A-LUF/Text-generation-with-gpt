    }

    #theme-toggle {
      margin-top: auto;
      padding: 10px;
      background: #00b4d8;
      border: none;
      border-radius: 5px;
      color: white;
      cursor: pointer;
    }

    #chat-area {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    #chat-box {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .message {
      padding: 10px 15px;
      margin-bottom: 10px;
      border-radius: 12px;
      max-width: 70%;
      word-wrap: break-word;
    }

    .user-message {
      background-color: #48cae4;
      align-self: flex-end;
      color: white;
    }

    .bot-message {
      background-color: #e0e0e0;
      align-self: flex-start;
    }

    .dark-mode .user-message {
      background-color: #219ebc;
    }

    .dark-mode .bot-message {
      background-color: #333;
